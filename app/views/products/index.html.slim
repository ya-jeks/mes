- @products.each_slice(4) do |line|
  .row.product-list
    - line.each do |product|
      .col-xs-3.product
        a.thumbnail href=product_path(product)
          .caption
            .row
              .col-xs-7
                h4 = product.name
              .col-xs-5.text-right
                h4
                  '&nbsp;
                  = number_to_currency(product.skus.first.sku_suppliers.first.price)
.row
  .col-xs-12
    = paginate @products
